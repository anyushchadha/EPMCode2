<div class="form-horizontal col-lg-12 col-md-12 col-md-no-padding-left col-sm-no-padding col-xs-no-padding">
    <div id="egOrderType">
        <div class="row" data-bind="foreach: {data: displayEgOrderType, as: 'egRow'}">
            <div class="row-height" data-bind="foreach: $data">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 eg-order-button-panel inside-full-height" 
                         data-title="Extras Only" data-trigger="hover" data-content="Extras Only Order is not available when using insurance."
                         data-bind="attr: { id: 'orderType_' + Id }, css: {'tt': Id === 4 }">
                        <div class="text-center">
                            <i class="icon-egMain" data-bind="css: { 'icon-frame': Id === 1 || 3, 'icon-lenses-3': Id === 2, 'icon-extras-2': Id === 4 }"></i>
                            <i class="" data-bind="css: { 'icon-plus': Id === 1, 'hidden': Id === 2, 'hidden': Id === 3, 'hidden': Id === 4 }"></i>
                            <i class="icon-egMain" data-bind="css: { 'icon-lenses-3': Id === 1, 'hidden': Id === 2, 'hidden': Id === 3, 'hidden': Id === 4 }"></i><br /><br />
                            <h3 data-bind="text: Name"></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
